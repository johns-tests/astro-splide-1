---
import "@splidejs/splide/css"
import { Splide, SplideSlide } from 'astro-splide';

import "../styles/splide.css";
---

<!-- not-content is used because this is using astro starlight
     without it, the 3 dots in the sliders are not aligned -->

<Splide class='not-content'
  options={ {  // check for options at https://splidejs.com/guides/options/
    type: 'loop',
    perPage: 3,
    perMove: 1,
    heightRatio: 0.3,
    autoplay: true,
    interval: 4000,
    speed: 1000,
    pauseOnHover: false,
  } }
